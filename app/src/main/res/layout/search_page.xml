<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/mainBlack">

    <EditText
        android:id="@+id/searchviewp_searchview"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_searchview"
        android:hint="Search"
        android:paddingStart="10dp"
        android:textColor="@color/mainLightGrey"
        android:textColorHint="@color/mainLightGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancel"
        style="@style/SearchPage_cancelText_Style"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="CANCEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchviewp_searchview" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/mainBlack"
        android:contentDescription="lol"
        app:layout_constraintStart_toEndOf="@+id/searchviewp_searchview"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />


</androidx.constraintlayout.widget.ConstraintLayout>