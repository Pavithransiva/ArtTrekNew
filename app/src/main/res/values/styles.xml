<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Home Page Text Style -->
    <style name="HomePage_Title_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="Category_Subtitle_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="TopCollection_Subtitle_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="TopCollection_Subtitle_Style_smaller">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="TopCollection_Subtitle_Style_snaller_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="FeaturedArtist_Subtitle_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="FeaturedArtist_Subtitle_Style_color">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/gotham_heavy</item>x
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="FeaturedArtwork_Subtitle_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <!-- Home Page Image Container Dimension -->
    <style name="container_roundedCorner_categories_dimension" parent="">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="image_container_dimension_featureArtwork" parent="">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
    </style>
</resources>