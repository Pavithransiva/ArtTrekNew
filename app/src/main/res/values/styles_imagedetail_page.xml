<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Image Detail Page Text Style -->
    <style name="imgdp_Title_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="imgdp_subtitle_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/gotham_regular_italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="imgdp_subtitle2_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="imgdp_subtitle2_sub_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="imgdp_description_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>
</resources>