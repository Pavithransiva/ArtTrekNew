<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Top Collection Details Page Text Style-->
    <style name="topcollection_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="topcollection_by">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <style name="topcollection_owner_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainLightGrey</item>
    </style>

    <!-- Round Corner Style -->
    <style name="container_roundedCorner_topcollection" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>